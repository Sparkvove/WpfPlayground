<UserControl x:Class="WpfPlayground.View.OverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPlayground.View"
             xmlns:viewModels="clr-namespace:WpfPlayground.ViewModel"
             xmlns:views="clr-namespace:WpfPlayground.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   
    <StackPanel>
        <TextBlock Text="Overview"
                   Foreground="White"
                   FontSize="22"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <Label Content="Player Name:"
               Foreground="White"
               Width="100"/>

        <Label Content="{Binding Player.Name}"
               Foreground="White"
               Width="70"/>

    </StackPanel>

    
</UserControl>
